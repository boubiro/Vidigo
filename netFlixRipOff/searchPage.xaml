<Window x:Class="netFlixRipOff.searchPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vidgio" Height="500" Width="800"  WindowStartupLocation="CenterScreen" Background="#E0F2F1">
    <Grid>
        <Rectangle Fill="#009688" HorizontalAlignment="Center" Height="65" Stroke="#009668" 
        		VerticalAlignment="Top" Width="792"/>
        <TextBox Name="searchBox" HorizontalAlignment="Left" Height="86" Margin="268,203,0,0" TextWrapping="Wrap" BorderBrush="#E0F2F1" Text="Start Your New Adventure Today" VerticalAlignment="Top" Width="266" FontWeight="Bold" FontFamily="/Fonts/roboto/#Roboto" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MouseDoubleClick="searchBox_MouseDoubleClick"/>
        <Label HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="40" Margin="33,10,0,0" 
        	VerticalAlignment="Top" Width="90" Foreground="White" FontWeight="Bold" FontFamily="/Fonts/roboto/#Roboto" 
        	FontSize="24" Content="Vidgio"/>
        <Button Content="Search" HorizontalAlignment="Left" Height="36" Margin="340,321,0,0" VerticalAlignment="Top" Width="120" Background="#4DB6AC" Foreground="White" 
                BorderBrush="#80CBC4" FontWeight="Bold" FontSize="15" FontFamily="/Fonts/roboto/#Roboto" Click="Button_Click"/>

    </Grid>
</Window>
